{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",

        "paths": {
            "*": ["./src/*"]
        },

        "esModuleInterop": true,
        "outDir": "./dist",

    },
    "include": [ "src" ],
    "exclude": [
        ".vscode",
        "node_modules",
        "dist"
    ]
}